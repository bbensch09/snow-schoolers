<%= semantic_form_for @lesson do |f| %>
  <%= f.semantic_errors :instructor %>

  <%= f.input :activity, as: :select, collection: ['Ski', 'Snowboard'] %>
  <%= f.input :location, as: :select, collection: ['Squaw Valley', 'Alpine Meadows', 'Northstar'] %>

  <%= f.semantic_fields_for :lesson_time, @lesson_time do |lt_f| %>
    <%= lt_f.input :date, as: :string, input_html: { id: 'datepicker' } %>
    <%= lt_f.input :slot, as: :select, collection: ['Morning', 'Afternoon', 'Full Day'] %>
  <% end %>

  <%= f.input :duration, as: :select, collection: [['2 hours', 2], ['3 hours', 3], ['6 hours', 6]] %>
  <%= f.input :start_time, as: :string, input_html: { id: 'timepicker' } %>
  <%= f.input :student_count, as: :select, collection: [1, 2, 3, 4, 5, 6] %>
  <%= f.input :gear, as: :select, collection: [['Yes, I have gear', true], ['No, I need gear', false]] %>
  <%= f.input :objectives %>
  <%= f.input :experience_level, as: :select, collection: [['First time on the mountain', 0], ['Beginner (~skier type I)', 1], ['Intermediate (~skier type II)', 2], ['Advanced (~skier type III)', 3]] %>
  <%= f.input :previous_experiences, as: :check_boxes %>
  <%= f.input :state, as: :hidden, input_html: { value: @state } %>

  <%= f.actions %>
<% end %>